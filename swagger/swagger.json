{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Scrape API",
    "description": "API for scraping data from websites"
  },
  "host": "localhost:3000",
  "basePath": "/api",
  "schemes": ["http"],
  "paths": {
    "/scrape": {
      "get": {
        "summary": "Get scraped data",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "websiteURL": {
                    "type": "string",
                    "description": "The URL of the website to scrape"
                  },
                  "specificSelector": {
                    "type": "string",
                    "description": "The specific CSS selector to target"
                  },
                  "titleSelector": {
                    "type": "string",
                    "description": "The CSS selector for the title"
                  },
                  "descriptionSelector": {
                    "type": "string",
                    "description": "The CSS selector for the description"
                  },
                  "imgSelector": {
                    "type": "string",
                    "description": "The CSS selector for the image"
                  },
                  "linkSelector": {
                    "type": "string",
                    "description": "The CSS selector for the link"
                  }
                },
                "required": [
                  "websiteURL",
                  "specificSelector",
                  "titleSelector",
                  "imgSelector",
                  "linkSelector"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Scraped data",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "image": {
                    "type": "string"
                  },
                  "url": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Save scraped data",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/ScrapeRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Data saved successfully",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/data": {
      "get": {
        "summary": "Get all scraped data from the database",
        "responses": {
          "200": {
            "description": "All scraped data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "title": {
                        "type": "string",
                        "description": "The title of the scraped item"
                      },
                      "description": {
                        "type": "string",
                        "description": "The description of the scraped item"
                      },
                      "image": {
                        "type": "string",
                        "description": "The image URL of the scraped item"
                      },
                      "url": {
                        "type": "string",
                        "description": "The link URL of the scraped item"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "definitions": {
    "ScrapeRequest": {
      "type": "object",
      "properties": {
        "websiteURL": {
          "type": "string"
        },
        "specificSelector": {
          "type": "string"
        },
        "titleSelector": {
          "type": "string"
        },
        "descriptionSelector": {
          "type": "string"
        },
        "imgSelector": {
          "type": "string"
        },
        "linkSelector": {
          "type": "string"
        }
      },
      "required": [
        "websiteURL",
        "specificSelector",
        "titleSelector",
        "descriptionSelector",
        "imgSelector",
        "linkSelector"
      ]
    }
  }
}
